#!/usr/bin/env python
import signal
import sys
from os import path

if __name__ == '__main__':
    from pysmhs.corehandler import corehandler
    c = corehandler(None,
                    {"configfile": path.join(
                        sys.prefix, "etc/pysmhs", "coreconfig.txt")})

    def stop(signum, stackframe):
        print "Got signal: %s" % signum
        print "STOP"
        c.stop()
    signal.signal(signal.SIGINT, stop)
    c.start()
    # while c.isAlive():
    #     try:
    #         c.join(1)
    #     except KeyboardInterrupt:
    #         c.stop()
    print "END"
