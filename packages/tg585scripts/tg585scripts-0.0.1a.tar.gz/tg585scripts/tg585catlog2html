try:
  import pexpect
except Exception, error_message:
  print '[-] Error: ' + str(error_message)
  exit(1)

import datetime


try:
  child = pexpect.spawn('telnet 192.168.1.254 23', timeout=3)

  child.expect('Username : ')
  child.sendline('username\r')

  child.expect('Password : ')
  child.sendline('password\r\n')

  child.expect('>')
  child.sendline('systemlog show\r')

  child.expect('>')
  child.sendline('exit\r')

  child.expect(pexpect.EOF)

  first = child.before[:-3]
  second = first.split('\n')[:-2]

  # http://www.w3schools.com/html/html_colornames.asp
  codecolor = 'red'
  syscolor = 'blue'
  uptimecolor = 'Peru'

  datee = datetime.datetime.now()
  titledate = str(datee.strftime('%Y/%m/%d %H:%M:%S'))
  htmlpagefilename = 'tg585catlog2html-' + str(datee.strftime('%Y-%m-%d--%H-%M-%S')) + '.html'

  head = '<html>\n\n\n<head>\n  <title>Tg585catlog2html ' + titledate + '</title>\n</head>\n\n\n<body>'
  tail = '</body>\n\n\n</html>\n\n'

  f = open(htmlpagefilename, 'w')
  f.write(head)

  for i in second:
    f.write( '  <span style=\"color:' + codecolor   + ';\">'  + i.split(' ')[0] + ' </span>' + \
             ' <span style=\"color:'  + syscolor    + ';\"> ' + i.split(' ')[1] + ' </span>' + \
             ' <span style=\"color:'  + uptimecolor + ';\"> ' + str(i.split(' ')[2:3])[2:-2] + ' ' + '</span>' + \
             str(' '.join(i.split(' ')[4:])).replace('\r', '') + str('<br>') + '\n' )  # Python!!

  f.write(tail)
  f.close()

except Exception, error_message:
  print '[-] Error: ' + str(error_message)
  exit(1)


exit(0)


